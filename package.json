{
  "name": "naxos",
  "description": "React Native UI components library.",
  "license": "MIT",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "app": "node create-app.js",
    "watch": "cpx 'src/**/*' app/node_modules/naxos/src --watch",
    "install-to-app": "npm i --no-save $(npm pack . | tail -1)  --prefix app",
    "test": "jest",
    "lint": "eslint ./src --fix",
    "format": "prettier \"src/**/*\" --write"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@react-native-community/eslint-config": "3.0.1",
    "babel-jest": "^27.2.5",
    "cpx": "^1.5.0",
    "eslint": "^8.0.0",
    "jest": "^27.2.5",
    "metro-react-native-babel-preset": "^0.66.2",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-native": "^0.66.0",
    "react-test-renderer": "^17.0.2",
    "recursive-copy": "^2.0.13",
    "rimraf": "^3.0.2"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "eslintConfig": {
    "extends": "@react-native-community",
    "rules": {
      "semi": 0
    }
  },
  "jest": {
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "/app/"
    ],
    "moduleNameMapper": {
      "naxos": "<rootDir>/src"
    }
  },
  "files": [
    "src"
  ],
  "keywords": [
    "react-native",
    "ui"
  ],
  "engines": {
    "node": ">= 14"
  }
}

{
  "name": "naxos",
  "description": "React Native UI components library.",
  "version": "0.0.0-development",
  "repository": "github:tobua/naxos",
  "license": "MIT",
  "scripts": {
    "app": "node create-app.js",
    "app:install": "npm i --no-save $(npm pack . | tail -1)  --prefix app",
    "build": "esbuild index.tsx --outdir=dist --bundle --minify --format=esm --sourcemap --external:react-native --external:react --loader:.png=dataurl && tsc",
    "watch": "npm-run-all --parallel build:watch copy",
    "copy": "cpx 'dist/**/*' app/node_modules/naxos/dist --watch",
    "format": "prettier \"{,!(app|dist)/**/}*.{ts,tsx}\" --write",
    "lint": "eslint . --fix --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watchAll"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": "^0.70.6"
  },
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "react-native",
    "ui"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/runtime": "^7.21.0",
    "@react-native-community/eslint-config": "3.2.0",
    "@types/jest": "^29.5.0",
    "@types/react": "^18.0.30",
    "@types/react-native": "^0.71.5",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "babel-jest": "^29.5.0",
    "cpx": "^1.5.0",
    "esbuild": "^0.17.14",
    "eslint": "^8.36.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "jest": "^29.5.0",
    "metro-react-native-babel-preset": "^0.76.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-native": "^0.71.4",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.4.1",
    "typescript": "^5.0.2"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": "@react-native-community",
    "rules": {
      "semi": 0
    },
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "rules": {
          "no-shadow": "off",
          "no-undef": "off",
          "@typescript-eslint/no-shadow": [
            "error"
          ]
        }
      }
    ],
    "ignorePatterns": [
      "dist",
      "app"
    ],
    "root": true
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "react-dom": "react-native",
      "naxos": "<rootDir>",
      "\\.(png|jpg|ico|jpeg|gif|svg|woff|woff2|mp4)$": "<rootDir>/test/helper/ImageMock.tsx"
    },
    "setupFiles": [
      "./test/helper/setup.ts"
    ],
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "/app/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!react-native|@react-native)"
    ]
  }
}

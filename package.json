{
  "name": "naxos",
  "description": "React Native UI components library.",
  "version": "0.0.0-development",
  "repository": "github:tobua/naxos",
  "license": "MIT",
  "scripts": {
    "app": "node create-app.js",
    "watch": "cpx '{component/**/*,style/**/*,asset/**/*,index.js,package.json}' app/node_modules/naxos --watch",
    "install-to-app": "npm i --no-save $(npm pack . | tail -1)  --prefix app",
    "test": "jest",
    "lint": "eslint . --fix",
    "format": "prettier \"{component,style}/**/*\" --write"
  },
  "type": "module",
  "main": "index.js",
  "files": [
    "component",
    "style",
    "asset"
  ],
  "keywords": [
    "react-native",
    "ui"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@react-native-community/eslint-config": "3.0.1",
    "babel-jest": "^27.3.1",
    "cpx": "^1.5.0",
    "eslint": "^8.2.0",
    "flow-bin": "^0.163.0",
    "jest": "^27.3.1",
    "metro-react-native-babel-preset": "^0.66.2",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-native": "^0.66.2",
    "react-test-renderer": "^17.0.2",
    "recursive-copy": "^2.0.13",
    "rimraf": "^3.0.2",
    "semantic-release": "^18.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "eslintConfig": {
    "extends": "@react-native-community",
    "rules": {
      "semi": 0
    },
    "ignorePatterns": [
      ".github",
      "app"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "naxos": "<rootDir>"
    },
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "/app/"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
